generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_DIRECT_URL")
}

model Company {
  id         Int        @id @default(autoincrement())
  name       String     @unique
  address    String
  latitude   Float
  longitude  Float
  logoUrl    String     @map("logo_url")
  createdAt  DateTime   @default(now()) @map("created_at")
  updatedAt  DateTime   @updatedAt @map("updated_at")
  subdomain  String     @unique
  categories Category[]
  dishes     Dish[]
  orders     Order[]
  tables     Table[]
  users      User[]

  @@map("companies")
}

model User {
  id           Int      @id @default(autoincrement())
  name         String
  email        String
  password     String
  role         Role
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")
  avatarUrl    String   @map("avatar_url")
  companyId    Int
  cookOrders   Order[]  @relation("CookOrders")
  waiterOrders Order[]  @relation("WaiterOrders")
  company      Company  @relation(fields: [companyId], references: [id])

  @@unique([email, companyId])
  @@map("users")
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  companyId Int?
  Company   Company? @relation(fields: [companyId], references: [id])
  dishes    Dish[]

  @@unique([name, companyId])
  @@map("categories")
}

model Dish {
  id          Int         @id @default(autoincrement())
  name        String
  description String
  price       Float
  imageUrl    String      @map("image_url")
  categoryId  Int?
  createdAt   DateTime    @default(now()) @map("created_at")
  updatedAt   DateTime    @updatedAt @map("updated_at")
  available   Boolean     @default(true)
  calories    Int?
  ingredients String[]
  weightGr    Int?        @map("weight_gr")
  companyId   Int?
  category    Category?   @relation(fields: [categoryId], references: [id])
  Company     Company?    @relation(fields: [companyId], references: [id])
  orderItems  OrderItem[]

  @@unique([name, companyId])
  @@map("dishes")
}

model Order {
  id         Int         @id @default(autoincrement())
  waiterId   Int
  cookId     Int?
  status     OrderStatus @default(PENDING)
  createdAt  DateTime    @default(now()) @map("created_at")
  updatedAt  DateTime    @updatedAt @map("updated_at")
  tableId    Int?
  companyId  Int
  orderItems OrderItem[]
  company    Company     @relation(fields: [companyId], references: [id])
  cook       User?       @relation("CookOrders", fields: [cookId], references: [id])
  table      Table?      @relation(fields: [tableId], references: [id])
  waiter     User        @relation("WaiterOrders", fields: [waiterId], references: [id])

  @@index([createdAt])
  @@index([status])
  @@index([waiterId])
  @@index([cookId])
  @@map("orders")
}

model OrderItem {
  id       Int     @id @default(autoincrement())
  orderId  Int
  dishId   Int
  quantity Int
  price    Float
  notes    String?
  dish     Dish    @relation(fields: [dishId], references: [id])
  order    Order   @relation(fields: [orderId], references: [id])

  @@index([dishId])
  @@map("order_items")
}

model Table {
  id        Int      @id @default(autoincrement())
  number    Int
  seats     Int
  active    Boolean  @default(true)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  companyId Int
  orders    Order[]
  company   Company  @relation(fields: [companyId], references: [id])

  @@unique([companyId, number])
  @@map("tables")
}

enum Role {
  ADMIN
  COOK
  WAITER
}

enum OrderStatus {
  PENDING
  IN_PROGRESS
  COMPLETE
  CANCELED
  DELIVERED
  FINISHED
}
